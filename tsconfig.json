{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noUnusedLocals": true,
    "outDir": "./build",
    "pretty": true,
    "strictNullChecks": true,
    "target": "es6"
  },
  "include": [
    "./src/**/*.ts",
    "./types/**/*.ts"
  ]
}
